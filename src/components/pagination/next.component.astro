---
import Item from "./item.component.astro";

interface Props {
  url?: string;
}
const { url } = Astro.props;
---

<Item
  as="a"
  href={url}
  class:list={[{ "pointer-events-none cursor-default": !url }]}
  aria-label={url && `Goto to next page`}
>
  <slot>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-6 h-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
    </svg>
  </slot>
</Item>

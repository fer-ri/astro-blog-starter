---
import { slugify } from "@/utils";

interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2 items-center text-sm font-medium">
  {
    tags?.map((item, index) => (
      <a
        href={`/tag/${slugify(item)}`}
        class:list={["relative hover:underline"]}
      >
        #{item}
      </a>
    ))
  }
</div>
